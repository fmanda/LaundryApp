<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="false"
    android:overScrollMode="always"
    android:scrollIndicators="top|bottom|right|start|end"
    android:scrollbarAlwaysDrawHorizontalTrack="false"
    android:scrollbarSize="30dp"
    android:scrollbarStyle="insideOverlay"
    android:scrollbars="vertical"
    android:verticalScrollbarPosition="right"
    app:layout_scrollFlags="scroll"
    tools:context="com.fma.laundryapp.facade.ProductCreateActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <EditText
                android:id="@+id/txtProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:hint="Nama Product"
                android:textSize="14sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="0">

            <EditText
                android:id="@+id/txtSKU"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="SKU / Kode Product"
                android:textSize="14sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="0">

            <EditText
                android:id="@+id/txtPrice"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="Harga Jual"
                android:inputType="numberDecimal"
                android:numeric="decimal"
                android:textSize="14sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="0">

            <EditText
                android:id="@+id/txtPPN"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="PPN (%)"
                android:inputType="numberDecimal"
                android:textSize="14sp" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0">

            <EditText
                android:id="@+id/txtSatuan"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="Satuan"
                android:textSize="14sp" />

        </android.support.design.widget.TextInputLayout>

        <CheckBox
            android:id="@+id/chkAllowDecimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:checked="true"
            android:text="@string/caption_check_allow_decimal" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
